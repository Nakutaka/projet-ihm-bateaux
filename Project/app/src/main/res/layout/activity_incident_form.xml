<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_gravity="start"
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparent"
        android:layout_marginStart="@dimen/big_padding"
        android:src="@drawable/ic_back"
        android:contentDescription="@string/txt_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/frame_layout_incident"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/button_back"
        app:layout_constraintBottom_toTopOf="@id/edit_comment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </FrameLayout>

    <EditText
        android:id="@+id/edit_comment"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/min_height"
        android:fontFamily="sans-serif-light"
        android:hint="@string/hint_comment"
        android:layout_marginBottom="30sp"
        android:layout_marginStart="20sp"
        android:backgroundTint="@color/cherry"
        android:textSize="18sp"
        android:autofillHints=""
        android:inputType="textAutoComplete|textCapSentences|textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:layout_gravity="center"
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cherry"
        android:text="@string/button_ok"
        android:textColor="@color/buttonLabel"
        app:layout_constraintStart_toEndOf="@id/edit_comment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/edit_comment"/>

</androidx.constraintlayout.widget.ConstraintLayout>