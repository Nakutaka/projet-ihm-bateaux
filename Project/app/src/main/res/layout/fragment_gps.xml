<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/locationView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="20sp"
            android:text="@string/defaultLocation"/>

        <ImageView
            android:id="@+id/imgGPSoff"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/imgLocationOff"
            android:layout_width="30dp"
            android:src="@drawable/ic_gps_off"
            android:layout_height="30dp"/>

        <ImageView
            android:id="@+id/imgLocationOff"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_location_off"
            android:layout_marginRight="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>