<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="10sp">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fab_level_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/des_basic"
        android:textSize="30sp"
        android:text="Specify scale:"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_level_one"
        style="@style/MyFloatingActionButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fab_level_two"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fab_level_two"
        app:layout_constraintTop_toTopOf="@id/fab_level_one"
        app:layout_constraintBottom_toBottomOf="@id/fab_level_one"
        android:layout_gravity="center"
        android:text="1"
        android:textSize="50sp"
        android:textColor="@android:color/white" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/fab_level_one"
        app:layout_constraintStart_toStartOf="@id/fab_level_one"
        app:layout_constraintEnd_toEndOf="@id/fab_level_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/txt_view_level_one"
        android:text="" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_level_two"
        style="@style/MyFloatingActionButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/fab_level_two"
        app:layout_constraintEnd_toEndOf="@id/fab_level_two"
        app:layout_constraintTop_toTopOf="@id/fab_level_one"
        app:layout_constraintBottom_toBottomOf="@id/fab_level_one"
        android:layout_gravity="center"
        android:text="2"
        android:textSize="50sp"
        android:textColor="@android:color/white" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/fab_level_two"
        app:layout_constraintStart_toStartOf="@id/fab_level_two"
        app:layout_constraintEnd_toEndOf="@id/fab_level_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/txt_view_level_two"
        android:text="" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_level_three"
        style="@style/MyFloatingActionButton"
        app:layout_constraintStart_toEndOf="@id/fab_level_two"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/fab_level_three"
        app:layout_constraintEnd_toEndOf="@id/fab_level_three"
        app:layout_constraintTop_toTopOf="@id/fab_level_one"
        app:layout_constraintBottom_toBottomOf="@id/fab_level_one"
        android:layout_gravity="center"
        android:text="3"
        android:textSize="50sp"
        android:textColor="@android:color/white" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/fab_level_three"
        app:layout_constraintStart_toStartOf="@id/fab_level_three"
        app:layout_constraintEnd_toEndOf="@id/fab_level_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/txt_view_level_three"
        android:text="" />


</androidx.constraintlayout.widget.ConstraintLayout>
