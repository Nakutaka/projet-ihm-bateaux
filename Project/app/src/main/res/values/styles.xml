<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:numberPickerStyle">@style/MyNumberPickerTheme</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/petrolBlue</item>
        <item name ="android:textSize">50sp</item>
    </style>

    <style name="MyNumberPickerTheme" parent="@android:style/Widget.Material.NumberPicker">
        <item name="color">#33691e</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="MyToolBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="homeAsUpIndicator">@drawable/ic_back</item>
        <item name="title">Default Title</item>
        <item name="titleTextColor">@color/white</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="MyToolBar.Title" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ACTIVITY_MAIN (carte) -->
    <style name="MyFloatingButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:tint">@color/white</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:elevation">0dp</item>
        <item name="pressedTranslationZ">0dp</item>
        <item name="borderWidth">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">@color/transparent</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <!--    -->

    <!-- FRAGMENT_REPORT_FORM -->
    <style name="LayoutForm">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10sp</item>
    </style>

    <style name="MyFloatingButtonForm" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:scaleX">1.2</item>
        <item name="android:scaleY">1.2</item>
    </style>

    <style name="ReportFloatingButtonForm" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:scaleX">1.2</item>
        <item name="android:scaleY">1.2</item>
    </style>

    <style name="TextViewForm" parent="android:Widget.TextView">
        <item name="android:layout_width">90sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MyButtons" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="borderWidth">0dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:textColor">@color/buttonLabel</item>
    </style>

    <!--    -->

    <!-- FRAGMENT BASIC INCIDENT -->
    <style name="MyFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/blue</item>
        <item name="android:scaleX">1.6</item>
        <item name="android:scaleY">1.6</item>
        <item name="tint">@color/white</item>
        <item name="elevation">0dp</item>
        <item name="pressedTranslationZ">0dp</item>
        <item name="borderWidth">0dp</item>
        <item name="android:shadowColor">@color/transparent</item>
    </style>

</resources>
