<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyToolBarTablet" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="homeAsUpIndicator">@drawable/ic_back</item>
        <item name="drawableSize">40dp</item>
        <item name="title">Default Title</item>
        <item name="titleTextColor">@color/white</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="MyToolBar.TitleTablet" parent="MyToolBar.Title">
        <item name="android:textSize">40sp</item>
    </style>

    <!-- ACTIVITY_MAIN (carte) -->
    <style name="MyFloatingButtonTablet" parent="MyFloatingButton">
        <item name="android:scaleX">1.5</item>
        <item name="android:scaleY">1.5</item>
        <item name="android:layout_margin">40dp</item>
    </style>

    <!--    -->

    <!-- FRAGMENT_REPORT_FORM -->
    <style name="LayoutFormTablet" parent="LayoutForm">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">15sp</item>
    </style>

    <style name="MyFloatingButtonFormTablet" parent="MyFloatingButtonForm">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:scaleX">2</item>
        <item name="android:scaleY">2</item>
    </style>

    <style name="TextViewFormTablet" parent="TextViewForm">
        <item name="android:layout_width">155sp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="MyButtonsTablet" parent="MyButtons">
        <item name="android:textSize">36sp</item>
    </style>

    <!--    -->

    <style name="MyCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">450dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="MyTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="MyIconLevel">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="tint">@color/white</item>
    </style>

</resources>